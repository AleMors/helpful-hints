<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xsi:schemaLocation="
         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
         http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

<bean id="camelTracer" class="org.apache.camel.processor.interceptor.Tracer">
    <property name="traceExceptions" value="false"/>
    <property name="traceInterceptors" value="true"/>
    <property name="logLevel" value="INFO"/>
    <property name="logName" value="com.mycompany.messages"/>
</bean>

  <camelContext trace="false" xmlns="http://camel.apache.org/schema/spring">
  	<template id="myTemplate" defaultEndpoint="direct:handleJson"/>
    <!-- 
    	Simple Hello world route to get things setup
     -->
    <route id="hello-camel">
    	<from uri="file:///Users/mkwyc_000/workspace/git/apache-camel-2.17.2/input" />
    	<to uri="file:///Users/mkwyc_000/workspace/git/apache-camel-2.17.2/output" />
    </route>
    
    <!-- 
    	Route that takes in a CSV file and outputs JSON
     -->
    <route id="csv-to-json">
    	<from uri="file:///Users/mkwyc_000/workspace/git/apache-camel-2.17.2/process-csv?delete=true" />
    	<process ref="csvToJson" />
    	<to uri="file:///Users/mkwyc_000/workspace/git/apache-camel-2.17.2/process-complete" />
    </route>
    
    <route id="handleJson">
    	<from uri="direct:handleJson" />
    	<log message="Got ${body}" />
    	<to uri="mongodb:mongoBean?database=test&amp;collection=testCollection&amp;operation=insert" />
    	<!--<to uri="file:///Users/mkwyc_000/workspace/git/apache-camel-2.17.2/output-json" />-->
    </route>
  </camelContext>
  
  <bean id="mongoBean" class="com.mongodb.Mongo">
  	<constructor-arg name="host" value="127.0.0.1" />
    <constructor-arg name="port" value="27017" />
  </bean>
  
  <bean id="csvToJson" class="datadidit.helpful.hints.camel.CSVToJson" >
  	<property name="producer" ref="myTemplate" />
  	<constructor-arg type="java.lang.Boolean" value="true"/>
  	<constructor-arg type="java.lang.String" value="" />
  </bean>
</beans>
